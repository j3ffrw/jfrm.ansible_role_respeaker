[Unit]
Description={{ respeaker_led_type }}

[Service]
Type=simple
ExecStart={{ respeaker_wyoming_satellite_dir }}/.venv/bin/python3 \
  {{ respeaker_wyoming_satellite_dir }}/examples/2mic_service.py \
  --uri 'tcp://127.0.0.1:10500'
WorkingDirectory={{ respeaker_wyoming_satellite_dir }}
Restart=always
RestartSec=1

[Install]
WantedBy=default.target
